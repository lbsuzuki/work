global proc PSTN_CLET_connectLEyeTex(){

	string $cord = `textField -q -text PST_tfCordName`;
	int $size = `size $cord`;
	string $last = `substring $cord $size $size`;
	if( $last != "_" ){
		$cord += "_";
	}

	string $scv[] = `ls -type "animCurve" -sl`;
	string $one;
	for( $one in $scv ){
		int $connect = ` isConnected -ignoreUnitConversion ( $cord + "texCTRL_link.L_eyeTex_atr" ) ( $one + ".input" ) `;
		if( !$connect ){
			connectAttr -f ( $cord + "texCTRL_link.L_eyeTex_atr" ) ( $one + ".input" );
		}
	}

}
