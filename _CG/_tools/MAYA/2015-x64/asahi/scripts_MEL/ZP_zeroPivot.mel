global proc ZP_zeroPivot(){global string $ZP_winName;$ZP_winName = `window	-title "zeroPivots"				-iconName "zeroPivots"				-width 100				-height 100`;columnLayout;	frameLayout	-labelVisible false			-borderStyle "etchedIn";		columnLayout;			frameLayout	-labelVisible false					-borderStyle	"etchedOut";				text -label "                      ピボットを原点に移動します。                ";			setParent..;			rowLayout	-numberOfColumns 4					-columnWidth4 1 85 85 85					-columnAlign4 "center" "center" "center" "center";				text	-label "";				button	-label "適用"					-width 85					-command	"ZP_tekiyou";				button	-label "ＯＫ"					-width 85					-command	"ZP_tekiyou;deleteUI $ZP_winName;";				button	-label "キャンセル"					-width 85					-command	"deleteUI $ZP_winName;";			setParent..;		setParent..;	setParent..;showWindow;window	-e	-width	269		-height 73		$ZP_winName;}global proc ZP_tekiyou(){	string $name[] = `ls -sl`;	int $kazu = `size $name`;	for($i=0; $i<$kazu; $i++)	{		xform -ws -pivots 0 0 0 $name[$i];	}}